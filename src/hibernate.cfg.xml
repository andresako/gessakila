<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/sakila?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">1234</property>
    <mapping resource="Modelo/FilmActor.hbm.xml"/>
    <mapping resource="Modelo/FilmText.hbm.xml"/>
    <mapping resource="Modelo/Category.hbm.xml"/>
    <mapping resource="Modelo/Language.hbm.xml"/>
    <mapping resource="Modelo/Film.hbm.xml"/>
    <mapping resource="Modelo/FilmCategory.hbm.xml"/>
    <mapping resource="Modelo/Actor.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
